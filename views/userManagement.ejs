<body>
    <%- include("./section/sidebar.ejs") %>

    

    <main id="main" class="main">

        <div class="pagetitle">
            <h1>UserManagement</h1>
            <!-- <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item ">Dashboard</li>
                </ol>
            </nav> -->
        </div><!-- End Page Title -->

        <section>

            <% if (successMessages && successMessages.length > 0) { %>
                <div class="alert alert-success" role="alert">
                    <%= successMessages[0] %>
                </div>
            <% } %>
            <div class="card p-5 mt-3">
                <div class="card-body">
                    <table id="myTable" class="display">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Gender</th>
                                <!-- <th>BirthDate</th>
                                <th>Address</th> -->
                                <th>User Type</th>
                                <th>Email</th>
                                <th>Status</th>
                                <th>Action</th>

                            </tr>
                        </thead>
                        <tbody>
                            <% let counter = 1; %>
                            <% users.forEach(user=> {%>
                                <!-- Add your data rows here -->
                                <tr>
                                    <td>
                                        <%= counter %>
                                    </td>
                                    <td>
                                        <%= user.firstName %>
                                    </td>   
                                    <td>
                                        <%= user.lastName %>
                                    </td>
                                    <td>
                                        <%= user.gender %>
                                    </td>
                                    <td>
                                        <%= user.userType %>
                                    </td>
                                    <td>
                                        <%= user.email %>
                                    </td>
                                    <td>
                                        <span class="badge badge-<%= user.status === 'Active' ? 'success' : 'danger' %> rounded-pill d-inline">
                                          <%= user.status %>
                                        </span>
                                      </td>
                                      <td>
                                        <div class="dropdown">
                                            <button class="btn btn-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                Update
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li>
                                                    <form action="/updateUserStatus" method="post">
                                                        <input type="hidden" name="id" value="<%= user.id %>">
                                                        <input type="hidden" name="status" value="Active">
                                                        <button type="submit" class="dropdown-item">Active</button>
                                                    </form>
                                                </li>
                                                <li>
                                                    <form action="/updateUserStatus" method="post">
                                                        <input type="hidden" name="id" value="<%= user.id %>">
                                                        <input type="hidden" name="status" value="Inactive">
                                                        <button type="submit" class="dropdown-item">Inactive</button>
                                                    </form>
                                                </li>
                                            </ul>
                                        </div>
                                    </td>
                                    
                                    <!-- Add your data columns here -->
                                </tr>
                                <% counter++; %>
                                <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
            
        </section>
  
        <script>
            $(document).ready(function () {
                // Handle click event on dropdown items with class 'update-status'
                $('.update-status').click(function (e) {
                    e.preventDefault(); // Prevent default link behavior
                    // Get user ID and status from data attributes
                    const userId = $(this).data('id');
                    const status = $(this).data('status');
                    // Send AJAX request to update status
                    $.ajax({
                        url: '/update-status', // Update the URL to match your server route
                        method: 'POST',
                        data: { id: userId, status: status },
                        success: function (response) {
                            // Handle success, if needed
                            console.log(response);
                            // Update the UI (optional)
                            const badge = $(e.target).closest('tr').find('.badge');
                            badge.removeClass('badge-danger badge-success');
                            badge.addClass(status === 'Active' ? 'badge-success' : 'badge-danger');
                            badge.text(status);
                        },
                        error: function (error) {
                            // Handle error, if needed
                            console.error(error);
                        }
                    });
                });
            });
        </script>
        
        <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.js"></script>
        <script type="text/javascript">
            $(document).ready(function () {
                $('#myTable').DataTable();
            });
        </script>
