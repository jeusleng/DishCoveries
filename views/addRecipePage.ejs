      <script>
        var ingredientCounter = 1;
        var instructionCounter = 1;

        function addIngredient() {
          var container = document.getElementById('ingredientContainer');
          var input = document.createElement('div');
          input.classList.add('ingredient-input');
          input.innerHTML = '<div class="input-group" style="margin-top: 10px;">' +
            '<span class="input-group-text">' + (ingredientCounter++) + '</span>' +
            '<input type="text" class="form-control" name="ingredients[]" placeholder="Ingredient" required>' +
            '<div class="input-group-append">' +
            '<button type="button" class="btn btn-sm btn-danger" onclick="removeElement(this)">&times;</button>' +
            '</div>' +
            '</div>';
          container.appendChild(input);
        }

        function addInstruction() {
          var container = document.getElementById('instructionContainer');
          var input = document.createElement('div');
          input.classList.add('instruction-input');
          input.innerHTML = '<div class="input-group" style="margin-top: 10px;">' +
            '<span class="input-group-text">' + (instructionCounter++) + '</span>' +
            '<input type="text" class="form-control" name="instructions[]" placeholder="Instruction" required>' +
            '<div class="input-group-append">' +
            '<button type="button" class="btn btn-sm btn-danger" onclick="removeElement(this)">&times;</button>' +
            '</div>' +
            '</div>';
          container.appendChild(input);
        }

        function removeElement(element) {
          var container = element.closest('.ingredient-input') || element.closest('.instruction-input');
          container.parentNode.removeChild(container);

          // Reset counters when an element is removed
          ingredientCounter = 1;
          instructionCounter = 1;

          // Update the counter labels
          updateCounterLabels();
        }

        function updateCounterLabels() {
          var ingredientInputs = document.querySelectorAll('.ingredient-input .input-group-text');
          var instructionInputs = document.querySelectorAll('.instruction-input .input-group-text');

          ingredientInputs.forEach(function(label, index) {
            label.textContent = index + 1;
          });

          instructionInputs.forEach(function(label, index) {
            label.textContent = index + 1;
          });
        }
      </script>



