<body>

    <%- include("./section/sidebar.ejs") %>

        <main id="main" class="main">
            <!-- Modal -->
            <!-- ... Existing code ... -->
            <div class="modal fade" id="viewModal" tabindex="-1" aria-labelledby="viewModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="viewModalLabel">View Recipe Details</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <p><strong>Recipe Name:</strong> <span id="recipeName"></span></p>
                            <p><strong>Cuisine:</strong> <span id="cuisine"></span></p>
                            <p><strong>Category:</strong> <span id="category"></span></p>
                            <p><strong>Description:</strong> <span id="description"></span></p>
                            <p><strong>Ingredients:</strong> <span id="ingredients"></span></p>
                            <p><strong>Instructions:</strong> <span id="instructions"></span></p>
                            <p><strong>Image:</strong> <img id="recipeImage" class="w-25" alt="Recipe Image"></p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="pagetitle">
                <h1>RecipeRequests</h1>
                <!-- <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                    <li class="breadcrumb-item ">Dashboard</li>
                </ol>
            </nav> -->
            </div><!-- End Page Title -->

            <section>

                <% if (successMessages && successMessages.length > 0) { %>
                    <div class="alert alert-success" role="alert">
                        <%= successMessages[0] %>
                    </div>
                <% } %>

                <div class="card p-5 mt-3">
                    <div class="card-body">
                        <table id="myTable" class="display">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Recipe Name</th>
                                    <th>Cuisine</th>
                                    <th>Category</th>
                                    <th>Recipe Description</th>
                                    <th>Ingredients</th>
                                    <th>Instructions</th>
                                    <th>Status</th>
                                    <!-- <th>Preparation Time</th>
                        <th>Cook Time</th>
                        <th>Servings</th>
                        <th>Difficulty</th> -->
                                    <th>Recipe Image</th>
                                    <th>Action</th>
                                    <!-- Add your desired columns here -->
                                </tr>
                            </thead>
                            <tbody>
                                <% let counter=1; %>
                                    <% recipes.forEach(recipe=> {%>

                                        <!-- Add your data rows here -->
                                        <tr>
                                            <td>
                                                <%= counter %>
                                            </td>
                                            <td>
                                                <%= recipe.recipeName %>
                                            </td>
                                            <td>
                                                <%= recipe.cuisine %>
                                            </td>
                                            <td>
                                                <%= recipe.category %>
                                            </td>
                                            <td class="ellipsis">
                                                <%= recipe.recipeDescription %>
                                            </td>
                                            <td class="ellipsis">
                                                <%= recipe.ingredients %>
                                            </td>
                                            <td class="ellipsis">
                                                <%= recipe.instructions %>
                                            </td>
                                            <td> 
                                                <span class="badge badge-<%= recipe.status === 'approved' ? 'success' : 'danger' %> rounded-pill d-inline">
                                                    <%= recipe.status %>
                                                  </span>
                                                </td>
                                            <!-- <td><%= recipe.prepTime %></td>
                        <td><%= recipe.cookTime %></td>
                        <td><%= recipe.servings %></td>
                        <td><%= recipe.difficulty %></td> -->
                                            <td><img src="/uploads/<%= recipe.recipeImage %>"
                                                    alt="<%= recipe.recipeName %>" class="w-25"></td>
                                            <td>
                                                <div class="dropdown">
                                                    <button class="btn btn-secondary btn-sm dropdown-toggle"
                                                        type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                        Action
                                                    </button>

                                                    <ul class="dropdown-menu">
                                                        <li>
                                                            <!-- ... Existing code ... -->
                                                            <button type="button" class="dropdown-item view-recipe-btn"
                                                                data-bs-toggle="modal" data-bs-target="#viewModal"
                                                                data-recipe-name="<%= recipe.recipeName %>"
                                                                data-cuisine="<%= recipe.cuisine %>"
                                                                data-category="<%= recipe.category %>"
                                                                data-description="<%= recipe.recipeDescription %>"
                                                                data-ingredients="<%= recipe.ingredients %>"
                                                                data-instructions="<%= recipe.instructions %>"
                                                                data-image="/uploads/<%= recipe.recipeImage %>">
                                                                View
                                                            </button>
                                                            <!-- ... Existing code ... -->

                                                        </li>

                                                        <li>
                                                            <form action="/recipes/approve/<%= recipe.id %>" method="post">
                                                                <button type="submit" class="dropdown-item">Approve</button>
                                                            </form>
                                                        </li>
                                                        <li>
                                                            <form action="/recipes/reject/<%= recipe.id %>" method="post">
                                                                <button type="submit" class="dropdown-item">Reject</button>
                                                            </form>
                                                        </li>
                                                    </ul>
                                                </div>

                                                <!-- Add your data columns here -->
                                        </tr>
                                        <% counter++; %>
                                            <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </section>
            <script type="text/javascript">
                $(document).ready(function () {
                    $('#myTable').DataTable();

                    // Handle click event on "View" button
                    $('.view-recipe-btn').click(function () {
                        var recipeName = $(this).data('recipe-name');
                        var cuisine = $(this).data('cuisine');
                        var category = $(this).data('category');
                        var description = $(this).data('description');
                        var ingredients = $(this).data('ingredients');
                        var instructions = $(this).data('instructions');
                        var image = $(this).data('image');

                        // Update modal content
                        $('#recipeName').text(recipeName);
                        $('#cuisine').text(cuisine);
                        $('#category').text(category);
                        $('#description').text(description);
                        $('#ingredients').text(ingredients);
                        $('#instructions').text(instructions);
                        $('#recipeImage').attr('src', image);
                    });
                });
            </script>

            <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.js"></script>
            <script type="text/javascript">
                $(document).ready(function () {
                    $('#myTable').DataTable();
                });
            </script>

        </main><!-- End #main -->

